<style>
  :root {
    --color-text-dark: #623a66;
    --color-lila-bg: #f9eefd;
    --color-title-color: white; 
  }
.about-me-container {
  display: flex;
  flex-direction: row; 
  align-items: stretch;
  width: 100vw;
  max-width: none; 
  margin: 0; 
  padding: 0;
  min-height: 120vh; /* <-- AUMENTADO a 95% de la altura de la pantalla */
  overflow: hidden; 
}

  .about-me-visual {
    flex: 1 1 50%; 
    overflow: hidden; 
    position: relative; 
  }

  .visual-background-image {
    width: 100%;
    height: 100%;
    object-fit: cover; 
    position: absolute; 
    top: 0;
    left: 0;
  }

  .about-me-content {
    flex: 1 1 50%; 
    background-color: var(--color-lila-bg); 
    border-radius: 0 60px 60px 0;
    padding: 100px 80px; 
    display: flex;
    flex-direction: column;
    justify-content: center; 
  }

  .title {
    font-size: 3.2rem; 
    font-weight: 800; 
    color: var(--color-title-color); 
    margin-bottom: 25px; 
    text-transform: uppercase;
    
    font-family: 'MiFuenteEspecial', cursive;
    letter-spacing: 0.1em;
    text-shadow: 1px 1px 0 rgba(0,0,0,0.1);
  }

  .description {
    font-size: 1.25rem;
    line-height: 1.7;
    color: var(--color-text-dark);
    margin-bottom: 0;
    
    font-family: 'MiFuenteEspecial', cursive;
    text-shadow: 0.5px 0.5px 0 rgba(0,0,0,0.05); 
  }

  @media (max-width: 992px) {
    .about-me-container {
      flex-direction: column; 
    }
    .about-me-visual {
        flex: 1 1 auto;
        max-width: 100%; 
        height: 300px; 
    }
    .about-me-content {
      flex: 1 1 auto;
      max-width: 100%; 
      padding: 40px 30px;
      border-radius: 0; 
    }
    .title {
      font-size: 2.5rem;
    }
  }
</style>